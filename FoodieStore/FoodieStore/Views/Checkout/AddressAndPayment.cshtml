@model FoodieStore.Models.Order
@{
    ViewBag.Title = "Address And Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Contents/js/jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Contents/js/jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4" id="cart-form">
    <h2>Submit your order</h2>
    <form method="post" action="@Url.Action("AddressAndPayment", "Checkout")">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="FirstName">First Name</label>
                @Html.TextBoxFor(i => i.FirstName, new { @class = "form-control", placeholder = "First Name" })
                @Html.ValidationMessageFor(i => i.FirstName)
            </div>
            <div class="col-md-6 mb-3">
                <label for="LastName">Last Name</label>
                @Html.TextBoxFor(i => i.LastName, new { @class = "form-control", placeholder = "Last Name" })
                @Html.ValidationMessageFor(i => i.LastName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="Address">Address</label>
                @Html.TextBoxFor(i => i.Address, new { @class = "form-control", placeholder = "Address" })
                @Html.ValidationMessageFor(i => i.Address)
            </div>
            <div class="col-md-6 mb-3">
                <label for="City">City</label>
                @Html.TextBoxFor(i => i.City, new { @class = "form-control", placeholder = "City" })
                @Html.ValidationMessageFor(i => i.City)
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="PostalCode">Postal Code</label>
                @Html.TextBoxFor(i => i.PostalCode, new { @class = "form-control", placeholder = "Postal Code" })
                @Html.ValidationMessageFor(i => i.PostalCode)
            </div>
            <div class="col-md-6 mb-3">
                <label for="Phone">Phone</label>
                @Html.TextBoxFor(i => i.Phone, new { @class = "form-control", placeholder = "Phone" })
                @Html.ValidationMessageFor(i => i.Phone)
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Submit your order</button>
        <button type="button" class="btn btn-primary" onclick="@("window.location.href='" + Url.Action("Index", "Home") + "'")">Cancel</button>
    </form>

</main>
