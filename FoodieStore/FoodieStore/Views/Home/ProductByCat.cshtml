@model IEnumerable<FoodieStore.Models.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="caviar-dish-menu clearfix" id="menu">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 mb-3" id="drinks-container">
                    <div class="caviar-single-dish wow fadeInUp" data-wow-delay="0.5s">
                        <img class="cat-img" src="@item.ImagePath" alt="@item.Description">
                        <div class="dish-info">
                            <h6 class="dish-name">@item.ProductName</h6>
                            <p class="dish-price">@item.ProductPrice</p>
                        </div>
                        <div class="button-container">
                            <a class="AddLink buy-button" data-id="@item.ProductId" title="Add to Cart">Αγορά</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</section>
@Html.Partial("_ModalPartial")