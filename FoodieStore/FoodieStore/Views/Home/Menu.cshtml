@model IEnumerable<FoodieStore.Models.Product>
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*Διέγραψα το Special content*@
<!-- ***** Breadcumb Area Start ***** -->
<div class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Contents/img/bg-img/hero-2.jpg)">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcumb-content">
                    <h2>Μενού</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Breadcumb Area End ***** -->
<!-- ***** Menu Area Start ***** -->
<div class="caviar-food-menu section-padding-150 clearfix">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <div class="food-menu-title">
                    <h2>Μενού</h2>
                </div>
            </div>

            <div class="col-10">
                <div class="caviar-menu-slides owl-carousel clearfix">

                    <div class="caviar-portfolio clearfix">
                        <!-- Single Gallery Item -->
                        <div class="single_menu_item breakfast wow fadeInUp">
                            @foreach (var item in Model)
                            {
                                <div class="d-sm-flex align-items-center">

                                    <div class="dish-thumb">
                                        <img class="rounded menu-img" src="@item.ImagePath" alt="@item.Description">
                                    </div>
                                    <div class="dish-description">
                                        <h3>@item.ProductName</h3>
                                        <p>@item.Description</p>
                                    </div>
                                    <div class="dish-value">
                                        <h3>@item.ProductPrice</h3>
                                    </div>
                                    <div class="button-container">
                                        <a class="AddLink buy-button-menu" href="#" data-id="@item.ProductId" title="Add to Cart">+</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Menu Area End ***** -->
@Html.Partial("_ModalPartial")