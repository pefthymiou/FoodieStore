@model FoodieStore.Models.LoginVM
@{
    Layout = null;
    ViewBag.Login = "Foodie-Login Form";
}


@using (Html.BeginForm("Login", "Auth",FormMethod.Post,new { id = "loginForm" }))
{
    @Html.AntiForgeryToken()
    <h4>Sign In</h4>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control input-focus" placeholder="username" name="username"/>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control input-focus" placeholder="password" name="password"/>
    </div>
}